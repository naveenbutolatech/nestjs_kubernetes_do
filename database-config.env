# üóÑÔ∏è Database Configuration Template
# Copy this file to database-config.env and fill in your details
# Then run: source database-config.env && ./deploy-to-eks-external-db.sh

# PostgreSQL Database Configuration
export DATABASE_HOST="your-postgresql-endpoint.amazonaws.com"
export DATABASE_PORT="5432"
export DATABASE_NAME="nestdb"
export DATABASE_USER="postgres"
export DATABASE_PASSWORD="your-secure-password"

# Redis Configuration
export REDIS_HOST="your-redis-endpoint.amazonaws.com"
export REDIS_PORT="6379"

# JWT Secret
export JWT_SECRET="your-jwt-secret-key-here"

# EKS Configuration
export CLUSTER_NAME="nestjs-prod"
export REGION="us-east-2"
export NAMESPACE="nestjs-prod"

# ECR Configuration
export ECR_REGISTRY="your-ecr-registry-url"
export ECR_REPOSITORY="nestjs-app-ecr"
export IMAGE_TAG="latest"
